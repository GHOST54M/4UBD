Criação da tabela EMPREGADO
CREATE TABLE EMPREGADO (
    RG VARCHAR2(10) PRIMARY KEY,
    Nome VARCHAR2(50) NOT NULL,
    CIC VARCHAR2(10),
    Depto NUMBER,
    RG_Supervisor VARCHAR2(10),
    Salario NUMBER(10, 2)
);

Criação da tabela DEPARTAMENTO
CREATE TABLE DEPARTAMENTO (
    Numero NUMBER PRIMARY KEY,
    Nome VARCHAR2(50) NOT NULL,
    RG_Gerente VARCHAR2(10)
);

Criação da tabela PROJETO
CREATE TABLE PROJETO (
    Numero NUMBER PRIMARY KEY,
    Nome VARCHAR2(50) NOT NULL,
    Localizacao VARCHAR2(50)
);

Criação da tabela DEPENDENTES
CREATE TABLE DEPENDENTES (
    RG_Responsavel VARCHAR2(10),
    Nome_Dependentes VARCHAR2(50),
    Nascimento DATE,
    Relacao VARCHAR2(20),
    Sexo VARCHAR2(10),
    PRIMARY KEY (RG_Responsavel, Nome_Dependentes)
);

Criação da tabela DEPARTAMENTO_PROJETO
CREATE TABLE DEPARTAMENTO_PROJETO (
    Numero_Depto NUMBER,
    Numero_Projeto NUMBER,
    PRIMARY KEY (Numero_Depto, Numero_Projeto)
);

Criação da tabela EMPREGADO_PROJETO
CREATE TABLE EMPREGADO_PROJETO (
    RG_Empregado VARCHAR2(10),
    Numero_Projeto NUMBER,
    Horas NUMBER,
    PRIMARY KEY (RG_Empregado, Numero_Projeto)
);

Definição das chaves estrangeiras

ALTER TABLE EMPREGADO
ADD CONSTRAINT fk_depto FOREIGN KEY (Depto) REFERENCES DEPARTAMENTO(Numero);

ALTER TABLE EMPREGADO
ADD CONSTRAINT fk_supervisor FOREIGN KEY (RG_Supervisor) REFERENCES EMPREGADO(RG);

ALTER TABLE DEPARTAMENTO
ADD CONSTRAINT fk_gerente FOREIGN KEY (RG_Gerente) REFERENCES EMPREGADO(RG);

ALTER TABLE DEPENDENTES
ADD CONSTRAINT fk_responsavel FOREIGN KEY (RG_Responsavel) REFERENCES EMPREGADO(RG);

ALTER TABLE DEPARTAMENTO_PROJETO
ADD CONSTRAINT fk_depto_projeto FOREIGN KEY (Numero_Depto) REFERENCES DEPARTAMENTO(Numero);

ALTER TABLE DEPARTAMENTO_PROJETO
ADD CONSTRAINT fk_projeto_depto FOREIGN KEY (Numero_Projeto) REFERENCES PROJETO(Numero);

ALTER TABLE EMPREGADO_PROJETO
ADD CONSTRAINT fk_empregado_projeto FOREIGN KEY (RG_Empregado) REFERENCES EMPREGADO(RG);

ALTER TABLE EMPREGADO_PROJETO
ADD CONSTRAINT fk_projeto_empregado FOREIGN KEY (Numero_Projeto) REFERENCES PROJETO(Numero);
